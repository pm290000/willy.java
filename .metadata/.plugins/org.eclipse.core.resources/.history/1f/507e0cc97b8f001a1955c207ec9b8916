package com.ict.edu;

public class Ex01 {
	public static void main(String[] args) {
		// 단순 if : 조건이 참일 때만 실행, 거짓일때는 if 문 무시
		// 조건식 : boolean, 비교연산, 논리연산
		// 형식 : if(조건식){
		// 조건식이 참일때 실행 문장;
		// 조건식이 참일때 실행 문장;
		// }
		// 단, 실행 문장이 한 줄 일때는 { }생략 가능

		// int k1 이 60 이상이면 합격,
		int k1 = 79;
		String str = "초기값";
		if (k1 >= 60) {
			str = "합격";
		}
		System.out.println("결과 : " + str);

		// int k2 이 60 이상이면 합격, 60미만은 불합격
		int k2 = 79;
		str = "초기값";
		if (k1 >= 60) {
			str = "합격";
		}
		if (k2<60) {
			str  = "불합격";
		}
		
		
		System.out.println("결과 : " + str);

		

		// int k3 이 60 이상이면 합격, 60미만은 불합격
		int k3 = 79;
		str = "초기값";
		if (k3 >= 60) {
			str = "합격";
		}
		
		
		System.out.println("결과 : " + str);

		
	}
}
